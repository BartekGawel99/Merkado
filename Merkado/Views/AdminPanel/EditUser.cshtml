@model User
@{
    ViewData["Title"] = "Edycja użytkownika";
}

<br />
<br />
<div class="container bg-light rounded-3 p-4">
    <p class="text-center h1">Panel administratora</p>
    <br />
    <h2 class="text-info">Edytuj użytkownika</h2>
    <br />

    <div>
        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="FirstName">Imię</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="FirstName"/>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="LastName">Nazwisko</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="LastName"/>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Email">Adres Email</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Email"/>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="UserName">Login</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="UserName"/>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="City">Miejscowość</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="City"/>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Street">Ulica</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Street"/>
                </div>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="PostalCode">Kod pocztowy</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="PostalCode"/>
                </div>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group row mt-4">
                <div class="col-3 offset-3">
                    <input asp-area="" asp-controller="AdminPanel" asp-action="EditUserCommand" type="submit" value="Zapisz" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-area="" asp-controller="AdminPanel" asp-action="Index" class="btn btn-success form-control">Wróć do listy</a>
                </div>
            </div>
        </form>
    </div>
    
    <div>
        <partial name="UserOpinions" />
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
