@model List<Product>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var item in Model.OrderByDescending(x => x.AddedDate).Take(8))
                    {
                        <div class="main page items" style="background-color: #fff;">
                        <div class="col mb-5">
                            <a class="btn mt-auto" href="#">
                                <div class="card h-100" style="border:hidden;">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Product image-->
                                    <img class="card-img-top" src="@Url.Content(item.CoverURL)" />
                                    <!-- Product details-->
                                    <div class="card-body p-4">
                                        
                                        <div class="text-center fs-5">
                                            <!-- Product price-->
                                            @item.Price zł
                                            <br>
                                            <div class="fs-6 fw-light">
                                            <!-- Product date-->
                                            @item.AddedDate.ToString("dd.MM.yyyy")
                                            <!-- Product localization-->
                                            @item.Localization
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        </div>
                    }
                </div>
            </div>         
    </section>
</div>
